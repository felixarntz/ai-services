{
	"name": "wp-starter-plugin",
	"license": "GPL-2.0-or-later",
	"repository": "git+https://github.com/vendor-ns/wp-starter-plugin.git",
	"keywords": [
		"wordpress",
		"plugin",
		"boilerplate",
		"starter",
		"oop"
	],
	"homepage": "https://the-plugin.com",
	"devDependencies": {
		"@wordpress/dependency-extraction-webpack-plugin": "^6.22.0",
		"@wordpress/env": "^10.27.0",
		"@wordpress/eslint-plugin": "^22.8.0",
		"@wordpress/scripts": "^30.15.0",
		"copy-webpack-plugin": "^10.2.0",
		"eslint-import-resolver-node": "^0.3.0",
		"eslint-plugin-tsdoc": "^0.4.0",
		"fast-glob": "^3.3.3",
		"prettier": "npm:wp-prettier@^3.0.3",
		"typedoc": "^0.28.4",
		"typescript": "^5.8.3"
	},
	"dependencies": {
		"@felixarntz/wp-interface": "file:../../misc/wp-packages/packages/wp-interface",
		"@felixarntz/wp-store-utils": "file:../../misc/wp-packages/packages/wp-store-utils",
		"@wordpress/api-fetch": "^7.22.0",
		"@wordpress/components": "^29.8.0",
		"@wordpress/data": "^10.22.0",
		"@wordpress/element": "^6.22.0",
		"@wordpress/i18n": "^5.22.0",
		"@wordpress/keyboard-shortcuts": "^5.22.0",
		"@wordpress/keycodes": "^4.22.0",
		"@wordpress/notices": "^5.22.0",
		"clsx": "^2.1.1",
		"prop-types": "^15.8.1"
	},
	"scripts": {
		"build": "wp-scripts build && tsc --build",
		"format-css": "wp-scripts lint-style --fix",
		"format-js": "wp-scripts format",
		"format-php": "wp-env run cli --env-cwd=wp-content/plugins/$(basename $(pwd)) composer format",
		"phpstan": "wp-env run cli --env-cwd=wp-content/plugins/$(basename $(pwd)) composer phpstan",
		"lint-css": "wp-scripts lint-style",
		"lint-js": "wp-scripts lint-js && tsc --noEmit",
		"lint-md": "wp-scripts lint-md-docs",
		"lint-php": "wp-env run cli --env-cwd=wp-content/plugins/$(basename $(pwd)) composer lint",
		"test-php": "wp-env run tests-cli --env-cwd=wp-content/plugins/$(basename $(pwd)) composer test",
		"test-php-multisite": "wp-env run tests-cli --env-cwd=wp-content/plugins/$(basename $(pwd)) composer test-multisite",
		"wp-env": "wp-env"
	}
}
